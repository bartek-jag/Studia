<?xml version="1.0"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:a="http://costam" targetNamespace="http://costam" elementFormDefault="qualified" >
	<xsd:element name="sklep">
        <xsd:complexType>
        <xsd:sequence>
        <xsd:element name="plyta" maxOccurs="3">
            <xsd:complexType>
                <xsd:sequence>
                    <xsd:element name="tytul" type="a:tlumaczenie1"/>
                    <xsd:element name="wykonawca" />
                    <xsd:element name="cena" type="a:waluta1"/>
                </xsd:sequence>
            </xsd:complexType>
        </xsd:element>
        </xsd:sequence>
        </xsd:complexType>
    </xsd:element>

  <xsd:complexType name="tlumaczenie1">
    <xsd:simpleContent>
      <xsd:extension base="xsd:string">
        <xsd:attribute name="tlumaczenie" type="xsd:string">
        </xsd:attribute>
      </xsd:extension>
    </xsd:simpleContent>
  </xsd:complexType>

    <xsd:complexType name="waluta1">
    <xsd:simpleContent>
      <xsd:extension base="xsd:string">
        <xsd:attribute name="waluta" type="xsd:string" form="qualified">
        </xsd:attribute>
      </xsd:extension>
    </xsd:simpleContent>
  </xsd:complexType>

</xsd:schema>




