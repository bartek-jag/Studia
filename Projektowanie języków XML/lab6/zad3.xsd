<?xml version="1.0"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<xsd:element name="slowo">
        <xsd:simpleType> 
            <xsd:restriction base="xsd:string">
                <xsd:pattern value="[Ss]\w{2}|[Aa]{3}"/>
            </xsd:restriction>
        </xsd:simpleType> 
	</xsd:element>
</xsd:schema>

